extends base 
block append head 

block append script
block content
    main.main
        div.signup-form
            h2.heading-secondary.ma-bt-lg New Here! Sign up now
            form.form.signup_form_action
                div.form__group
                    label.form__label(for='name') Full Name
                    input.form__input(type='text', id='name', name='name', placeholder='Alex Doe', required)
                div.form__group
                    label.form__label(for='email') Email address
                    input.form__input(type='email', id='email', name='email', placeholder='you@example.com', required)
                div.form__group
                    label.form__label(for='password') Password
                    input.form__input(type='password', id='password', name='password', placeholder='••••••••', required)
                div.form__group
                    label.form__label(for='password') Confirm Password
                    input.form__input(type='password', id='password-confirm', name='passwordConfirm', placeholder='••••••••', required)
                div.form__group
                    button.btn.btn--green.btn--small.btn--signup Signup
                .form__group
                    a.form__link(href='/login') Have account? Login here!