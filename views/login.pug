extends base 
block append head 

block append script
    //- script(src='/js/login.js')
block content
    main.main
        div.login-form
            h2.heading-secondary.ma-bt-lg Login into your account
            form.form.logi-form
                div.form__group
                    label.form__label(for='email') Email address
                    input.form__input(type='email', id='email', name='email', placeholder='you@example.com', required)
                div.form__group
                    label.form__label(for='password') Password
                    input.form__input(type='password', id='password', name='password', placeholder='••••••••', required)
                div.form__group
                    button.btn.btn--green.btn--small Login
                .form__group
                    a.form__link(href='/forgot-password') Forgot your password?
                .form__group
                    a.form__link(href='/signup') Don't have an account? Sign up here!